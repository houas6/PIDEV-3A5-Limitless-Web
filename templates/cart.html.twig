{% extends 'base.html.twig' %}
{% block body %}
 {% if panier is empty %}
	   <section class="posts">
						            <article class="article1"> 
						                <img class="img1" src="img/emptyBasket.png" alt="" width="250px" class="mt-3 mb-3"> 
					<h4>Votre panier est vide!</h4>
					<p>Vous n'avez pas encore ajouté d'article à votre panier.</p>
					 <a href="" class="btn btn-secondary">Retour à l'accueil</a>
					</article>
			</section>
    {% else %}

    <!-- Breadcrumb Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-light mb-30">
                    <a class="breadcrumb-item text-dark" href="#">Home</a>
                    <a class="breadcrumb-item text-dark" href="#">Shop</a>
                    <span class="breadcrumb-item active">Shopping Cart</span>
                </nav>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->


    <!-- Cart Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-8 table-responsive mb-5">
                <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Products</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                    
                    {# pannier debut #}
                     {% for item in panier %}
                        <tr>
                            <td class="align-middle"><img src="http://localhost/{{ item.IdProduit.getImage }}" alt="" style="width: 50px;"> {{item.IdProduit.getNomProduit}}</td>
                            <td class="align-middle">${{item.IdProduit.getPrix}}</td>
                            <td class="align-middle">
                                <div class="input-group quantity mx-auto" style="width: 100px;">
                                    <div class="input-group-btn">
                                    <a href="{{ path('decrement_panier', {'idProduit': item.IdProduit.getIdProduit}) }}" class="btn btn-sm btn-primary btn-minus">
                                    <i class="fa fa-minus"></i>
                                    </a>
                                    </div>
                                    <input type="text" class="form-control form-control-sm bg-secondary border-0 text-center" value={{item.getQuantiteProduct}}>
                                    <div class="input-group-btn">
                                    <a href="{{ path('increment_panier', {'idProduit': item.IdProduit.getIdProduit}) }}" class="btn btn-sm btn-primary btn-plus">
                                    <i class="fa fa-plus"></i>
                                    </a>
                                    </div>
                                </div>
                            </td>
                            <td class="align-middle">${{item.IdProduit.getPrix * item.getQuantiteProduct}}</td>
                            <td class="align-middle"><a href="{{ path('delete_panier', {'idPanier': item.getIdPanier}) }}" class="btn btn-sm btn-danger"><i class="fa fa-times"></i></a>
                            {# <button onclick="/cart/remove/{{item.IdProduit.getIdProduit}}" class="btn btn-sm btn-danger"><i class="fa fa-times"></i></button> #}
                            </td>
                        </tr>
                        {# pannier fin #}
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="col-lg-4">
                <form class="mb-30" action="">
                    <div class="input-group">
                        <input type="text" class="form-control border-0 p-4" placeholder="Coupon Code">
                        <div class="input-group-append">
                            <button class="btn btn-primary">Apply Coupon</button>
                        </div>
                    </div>
                </form>
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Cart Summary</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div class="border-bottom pb-2">
                        <div class="d-flex justify-content-between mb-3">
                            <h6>Subtotal</h6>
                            <h6>${{totalPrice}}</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Shipping</h6>
                            <h6 class="font-weight-medium">$10</h6>
                        </div>
                    </div>
                    <div class="pt-2">
                        <div class="d-flex justify-content-between mt-2">
                            <h5>Total</h5>
                            <h5>${{totalPrice + 10}}</h5>
                        </div>
                        <a href="/checkout" class="btn btn-block btn-primary font-weight-bold my-3 py-3">Proceed To Checkout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Cart End -->

{% endif %}
 <style>
.article1 {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.img1 {
  margin: 2rem auto;
}
        </style>
{% endblock %}
