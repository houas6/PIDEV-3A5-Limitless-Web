{% extends 'base.html.twig' %}

{% block title %}Livreur index{% endblock %}

{% block body %}
    <h1>Livreur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdLivreur</th>
                <th>Nom</th>
                <th>Mail</th>
                <th>Telephone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livreur in livreurs %}
            <tr>
                <td>{{ livreur.idLivreur }}</td>
                <td>{{ livreur.nom }}</td>
                <td>{{ livreur.mail }}</td>
                <td>{{ livreur.telephone }}</td>
                <td>
                    <a href="{{ path('app_livreur_show', {'idLivreur': livreur.idLivreur}) }}">show</a>
                    <a href="{{ path('app_livreur_edit', {'idLivreur': livreur.idLivreur}) }}">edit</a>
                </td>
            </tr>
