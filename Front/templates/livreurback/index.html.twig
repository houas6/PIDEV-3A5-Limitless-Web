{% extends 'baseback.html.twig' %}

{% block title %}Livreur index{% endblock %}

{% block body %}

    {% if back is defined %}
        {% if back == 'success' %}
            <div class="alert alert-success">Search successful!</div>
        {% elseif back == 'failure' %}
            <div class="alert alert-danger">No Livreur found!</div>
        {% endif %}
    {% endif %}

    <form method="POST" class="form-inline">
        <div class="form-group">
            <label for="optionsearch">Search by:</label>
            <select class="form-control" id="optionsearch" name="optionsearch">
                <option value="nom">nom</option>
               
                
            </select>
        </div>
        <div class="form-group">
            <label for="Search">Search:</label>
            <input type="text" class="form-control" id="Search" name="Search">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <br>

    <form method="POST" class="form-inline">
        <div class="form-group">
            <label for="optionsRadios">Sort by:</label>
            <div class="radio">
                <label><input type="radio" name="optionsRadios" value="nom" checked>Nom</label>
            </div>
            
            
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    

    <table class="table">
        <thead>
            <tr>
                <th>IdLivreur</th>
                <th>Nom</th>
                <th>Mail</th>
                <th>Telephone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for livreur in livreurs %}
            <tr>
                <td>{{ livreur.idLivreur }}</td>
                <td>{{ livreur.nom }}</td>
                <td>{{ livreur.mail }}</td>
                <td>{{ livreur.telephone }}</td>
                <td>
                    <a href="{{ path('app_livreur_back_show', {'idLivreur': livreur.idLivreur}) }}">show</a>
                    <a href="{{ path('app_livreur_back_edit', {'idLivreur': livreur.idLivreur}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_livreur_back_new') }}">Create new</a>
{% endblock %}
